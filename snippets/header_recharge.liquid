.nav__list--desktop.rc_page-width.rc_card_container{padding:10px 0!important}body#recharge-novum #recharge-te .rc_purchase_type.border-light:has(input):before{border-radius:100%;width:19px;height:19px;display:flex;justify-content:center;align-items:center;content:"";border:1px solid #dbd3ce;margin-right:10px}body#recharge-novum #recharge-te .rc_purchase_type.border-light:has(input:checked):before{content:"â—‰";font-size:30px;color:#d1d7e0;border:none}@media only screen and (max-width:749px){ul.nav__list--desktop.rc_page-width.rc_card_container{width:100%;overflow-x:scroll;gap:33px!important;height:14px!important;padding:13px 0!important}}

.nav--wrapper.bg-light {
}

ul.nav__list--desktop.rc_page-width.rc_card_container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 33px;
    list-style-type: none;
    font-family: Gotham;
    font-style: normal;
    font-weight: 400;
    line-height: 22px; /* 200% */
    letter-spacing: 4px;
    border-top: 1px solid var(--grayscale-line, #DBD3CE);
    background: #F4F1EF;
    text-transform: uppercase;
    padding:  0px !important;
    font-size: calc(var(--small-paragraph) * var(--FONT-ADJUST-BODY));
    margin-left: 0px !important;
    margin-bottom: 40px !important;
}

.nav__list--desktop li a {
    text-decoration: none !important;
}

.nav__list--desktop li {
    text-decoration: none !important;
}

.nav__list--desktop li::marker {
    display: none !important;
}

ul.nav__list--desktop.rc_page-width.rc_card_container li {
    padding: 14px 0px !important;
    margin-bottom: 0px !important
}

ul.nav__list--desktop.rc_page-width.rc_card_container {
    min-height: 50px;
    width: 100%;
}

ul.nav__list--desktop.rc_page-width.rc_card_container li:has(#orders-page) {margin-left: 140px;}
only screen and (max-width: 749px) {
body#recharge-novum #recharge-te ul.nav__list--desktop li a {
    font-size: 11px !important;
    font-weight: 400 !important;
    line-height: 120% !important;
    letter-spacing: 4px !important;
    text-transform: uppercase !important;
}

ul.nav__list--desktop.rc_page-width.rc_card_container { 
  overflow: scroll;
}

}


.customer-box {
    background: var(--grayscale-input-background, #F4F1EF);
    padding: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 12px;
    flex-direction: column;
}

.customer-box * {
    margin: 0px;
}

@media only screen and (max-width: 750px) {
  .customer-box {
    display: none !important;
  }
}
{%endstyle%}